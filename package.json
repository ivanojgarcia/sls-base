{
  "name": "sls-base",
  "version": "1.0.0",
  "description": "Microservices for the management of examination records",
  "main": "handler.js",
  "scripts": {
    "test-dev": "STAGE=test jest",
    "test": "echo \"Error: no test specified\" && exit 1",
    "offline": "sls offline start --httpPort 3004 --lambdaPort 3006",
    "sls": "serverless",
    "npm-check": "npm-check"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "html"
    ],
    "coverageDirectory": "<rootDir>/coverage/",
    "collectCoverageFrom": [
      "**/app/*.{js,jsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 10,
        "functions": 10,
        "lines": 10,
        "statements": 10
      }
    }
  },
  "author": "Ivano J. Garc√≠a",
  "license": "ISC",
  "devDependencies": {
    "jest": "^28.1.3",
    "serverless": "^3.21.0",
    "serverless-offline": "^9.0.0",
    "serverless-plugin-optimize": "^4.1.4-rc.1"
  },
  "dependencies": {
    "aws-sdk": "^2.1182.0",
    "dotenv": "^16.0.1",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.34",
    "node-fetch": "^3.2.9",
    "npm-check": "^6.0.1",
    "uuid": "^8.3.2",
    "winston": "^3.8.1"
  }
}
